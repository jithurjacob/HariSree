{
  "name": "harisree",
  "version": "4.0.0",
  "description": "Indian Language typing made easy and cool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-packager . HariSree -platform=win32 -arch=x64 -version=4.0.0 -icon=/resources/icon/logo.ico",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.jithurjacob.HariSree",       
    "win": {
      "target": "nsis",
      "icon": "resources/icon/logo.ico"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jithurjacob/HariSree.git"
  },
  "author": "Jithu R Jacob",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jithurjacob/HariSree/issues"
  },
  "homepage": "https://github.com/jithurjacob/HariSree#readme",
  "devDependencies": {
    "electron": "^2.0.3",
    "electron-builder": "^20.24.4",
    "quill": "^1.3.6"
  },
  "dependencies": {
    "bootstrap": "^4.1.1",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.3"
  }
}
